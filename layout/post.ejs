<div class="sidebar blog">
  <div class="sidebar-inner">
    <ul class="main-menu">
      <%- partial('partials/main_menu', { context: 'nav' }) %>
    </ul>
    <div class="list">
      <h2>
        TIMELINE
        <a href="<%- url_for("/atom.xml") %>" target="_blank" style="vertical-align: middle; margin-left: 5px;">
          <i class="fas fa-rss fa-fw"></i>
        </a>
      </h2>
      <ul style="padding: 0;">
      <% site.posts.sort('date', -1).limit(100).each(function (post) { %>
        <li>
          <a href="/<%- post.path %>" class="sidebar-link<%- page.title === post.title ? ' current' : '' %>"><%- post.title %></a>
        </li>
      <% }) %>
      </ul>
    </div>
  </div>
</div>
<div class="content with-sidebar blog post">
  <h1><%- page.title %></h1>
  <% if (page.date) { %>
    <h4><%- page.date.format(config.date_format) %></h4>
  <% } %>
  <%- page.content %>

  <%- partial('partials/readmore') %>

</div>
