@import "_settings"

$lineheight_base = 1em
$fontsize_small = 1em
$border_radius = .8em

#comments
  position: relative
  #valine_container
    .vcontent.expand
      &:after
        background: #fafafaea
        color: #666
        font-weight: bold
        z-index: 1
    .info
      display: none
    .vwrap
      display: none
      border-radius: $radius
      border-style: dashed
      border: 1px dashed lighten($color_theme, 70%)
      &:hover
        border: 1px dashed lighten($color_theme, 0%)
      .vedit .vctrl span
        padding: 0
        margin: 10px

    button
      font-weight: bold
      border: none
      padding-left: 2.4em
      padding-right: 2.4em
      background-color: lighten($color_theme, 20%)
      color: white
      border-radius: $radius
      &:hover
        background: darken($color_theme, 20%)
      &:active
        background: darken($color_theme, 30%)
    blockquote
      padding: $gap * 0.5
      border-left: $radius solid $color_theme
      p
        text-align: left
        word-wrap: normal
        margin: 0
        font-size: $body-font-size
        line-height: $body-font-size * 1.5
    pre
      padding: $gap * 0.5
      border: none
      font-size: 1em
      font-family: $code-font
    code
      font-family: $code-font
      font-size: $code-font-size
      background-color: $codebg
    a, .vemoji-btn, .vpreview-btn
      font-weight: bold
      color: $color_link
      &:hover
        color: $color_theme
      &:active
        color: darken($color_theme, 25%)
    .vemoji-btn, .vpreview-btn
      color: $color_theme
    .vhead
      span
        &.vnick
          color: #666
      a
        &.vnick
          color: #ff9800
          font-weight: bold
          &:hover
            color: $color_theme
    .vmeta
      .vat
        color: lighten($color_theme, 20%)
        font-weight: bold
        &:hover
          color: darken($color_theme, 20%)
        &:active
          color: darken($color_theme, 30%)
  .vemojis
    justify-content: space-between
    i
      width: auto
      height: 36px
      padding: 0
      margin: 8px 8px 0 8px
      .emoji
        height: 24px
        margin-top: 5px
  p
    .emoji
      display: inline
      height: 28px
